{
	"arrowParens": "avoid",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"trailingComma": "none"
			}
		},
		{
			"files": "*.md",
			"options": {
				"parser": "markdown"
			}
		},
		{
			"files": "*.yml",
			"options": {
				"parser": "yaml",
				"tabWidth": 2,
				"useTabs": false
			}
		}
	],
	"plugins": ["prettier-plugin-sh"],
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true
}
